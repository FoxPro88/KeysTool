<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/white"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="TLK Inject"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_key_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_tlk_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textNoSuggestions|textMultiLine"
                                    android:maxLines="10"
                                    android:singleLine="false" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/btn_tlk_validate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_bg"
                                android:text="Validate"
                                android:textAllCaps="false"
                                android:textColor="@color/culqi_blue"/>

                            <Button
                                android:id="@+id/btn_tlk_inject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:backgroundTint="@color/bbva_blue"
                                android:text="Inject"
                                android:textColor="@color/white"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/white"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_weight="10"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">

                                <TextView
                                    android:layout_weight="8"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="TMK Inject"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_tmk_slot"
                                    android:layout_weight="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="@drawable/button_bg"
                                    android:padding="10dp"
                                    android:text="SLOT : 1"
                                    android:textColor="@color/culqi_blue"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_key_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_tmk_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textNoSuggestions|textMultiLine"
                                    android:maxLines="10"
                                    android:singleLine="false"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <Button
                                android:id="@+id/btn_tmk_validate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_bg"
                                android:text="Validate"
                                android:textAllCaps="false"
                                android:textColor="@color/culqi_blue"/>

                            <Button
                                android:id="@+id/btn_tmk_inject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/bbva_blue"
                                android:text="Inject"
                                android:textColor="@color/white"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/white"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_margin="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingBottom="10dp"
                                    android:text="TDK Inject"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tv_read_tmk_slot"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:background="@drawable/button_bg"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:text="SLOT TMK : 1"
                                        android:textColor="@color/culqi_blue"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_tdk_slot"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:background="@drawable/button_bg"
                                        android:padding="10dp"
                                        android:layout_margin="10dp"
                                        android:text="SLOT TDK : 1"
                                        android:textColor="@color/culqi_blue"
                                        android:textStyle="bold" />

                                </LinearLayout>



                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:startIconDrawable="@drawable/ic_key_gray">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_tdk_key"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textNoSuggestions|textMultiLine"
                                        android:maxLines="10"
                                        android:singleLine="false"/>

                                </com.google.android.material.textfield.TextInputLayout>


                                <Button
                                    android:id="@+id/btn_tdk_validate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/button_bg"
                                    android:text="Validate"
                                    android:textAllCaps="false"
                                    android:textColor="@color/culqi_blue"/>

                                <Button
                                    android:id="@+id/btn_tdk_inject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bbva_blue"
                                    android:text="Inject"
                                    android:textColor="@color/white"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>